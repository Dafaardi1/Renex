@app.route('/dashboard')
def dashboard():
    # Menghitung statistik sederhana dari database objek kita
    total_mobil = len(inventory.daftar_mobil)
    tersedia = len([m for m in inventory.daftar_mobil if m.is_available])
    disewa = total_mobil - tersedia
    
    # Menghitung estimasi total pendapatan dari transaksi sukses
    pendapatan = sum(b.total_biaya for b in transaksi_db if b.status_booking == "Confirmed")
    
    return render_template('dashboard.html', 
                           mobil=inventory.daftar_mobil, 
                           transaksi=transaksi_db,
                           stats={
                               'total': total_mobil,
                               'tersedia': tersedia,
                               'disewa': disewa,
                               'pendapatan': pendapatan
                           })
